{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Auth": {
    "Issuer": "https://identity.api:5001",
    "SigningKey": "secretJWTsigningKey@123"
  },
  "OpenApi": {
    "Endpoint": {
      "Name": "Posts.Aggreagetor V1"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identityapi.Users.Route": {
        "ClusterId": "identity.api.cluster",
        "Match": {
          "Path": "/api/v1/Auth/{**catch-all}"
        }
      },
      "identityapi.Auth.Route": {
        "ClusterId": "identity.api.cluster",
        "Match": {
          "Path": "/api/v1/Users/{**catch-all}"
        }
      },
      "mediaStorageapi.Images.Route": {
        "ClusterId": "mediastorageapi.cluster",
        "Match": {
          "Path": "/api/v1/Image/{**catch-all}"
        }
      },
      "interaction.Likes.Route": {
        "ClusterId": "interactionapi.cluster",
        "Match": {
          "Path": "/api/v1/Likes/{**catch-all}"
        }
      },
      "interaction.Views.Route": {
        "ClusterId": "interactionapi.cluster",
        "Match": {
          "Path": "/api/v1/Views/{**catch-all}"
        }
      },  
    "post.Post.Route": {
        "ClusterId": "postapi.cluster",
        "Match": {
          "Path": "/api/v1/Posts/{**catch-all}"
        }
      }, 
    "postcomments.PostComments.Route": {
        "ClusterId": "postcommentsapi.cluster",
        "Match": {
          "Path": "/api/v1/PostComments/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identityapi.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://identity.api/"
            //"Address": "http://localhost:5001"
          }
        }
      },
      "mediastorageapi.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://mediastorage.api/"
          }
        }
      },
      "interactionapi.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://interaction.api/"
          }
        }
      },
      "postcommentsapi.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://postcomments.api/"
          }
        }
      },
      "postapi.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://post.api/"
          }
        }
      }
    }
  }
}